{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "paths": {
    "@/*": ["./src/*"]
  }
}
